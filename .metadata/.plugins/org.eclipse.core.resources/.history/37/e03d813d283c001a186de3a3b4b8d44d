package com.dao;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.util.Scanner;

public class Student {
	Scanner scan = new Scanner(System.in);
	public Student() {
		try {
			Class.forName("oracle.jdbc.driver.OracleDriver");
			System.out.println("driver loading  success");
		} catch (ClassNotFoundException e) {
			e.printStackTrace();
		}
	}
	public Connection getConnection() {
		Connection conn = null;
		try {
			conn = DriverManager.getConnection("jdbc:oracle:thin:@localhost:1521:xe","c##java","bit");
			System.out.println("connection success");
		} catch (SQLException e) {
			e.printStackTrace();
		}
		return conn;
	}
	public void menu() {
		System.out.println("****************");
		System.out.println("1. 입력");
		System.out.println("2. 검색");
		System.out.println("3. 삭제");
		System.out.println("4. 종료");
		System.out.println("****************");
		System.out.print("번호선택: ");
	}
	public static void main(String[] args) {
		Student st = new Student();
		while(true) {
			st.menu();
			int choice = st.scan.nextInt();
			if(choice == 1) {
				st.insertArticle();continue;
			}else if(choice == 2) {
				st.selectArticle();continue;
			}else if(choice == 3) {
				st.deleteArticle();continue;
			}else if(choice == 4) {
				System.out.println("프로그램을 종료합니다.");break;
			}
		}
	}
	private void insertArticle() {
		System.out.println("****************");
		System.out.println("1. 학생");
		System.out.println("2. 교수");
		System.out.println("3. 관리자");
		System.out.println("4. 이전메뉴");
		System.out.println("****************");
		System.out.print("번호선택: ");
		int code = scan.nextInt();
		if(code ==1) {//학생
			System.out.print("이름입력: ");
			String name = scan.next();
			System.out.print("학번입력: ");
			String value = scan.next();
		}else if(code ==2) {//교수
			System.out.print("이름입력: ");
			String name = scan.next();
			System.out.print("과목입력: ");
			String value = scan.next();
		}else if(code ==3) {//관리자
			System.out.print("이름입력: ");
			String name = scan.next();
			System.out.print("부서입력: ");
			String value = scan.next();
		}else if(code ==4) {//이전메뉴
			return;
		}
		Connection conn = this.getConnection();
		String sql = "";
		PreparedStatement ps = null;
		try {
			ps = conn.prepareStatement(sql);
		} catch (SQLException e) {
			e.printStackTrace();
		}finally {
				try {
					if(ps!=null)ps.close();
					if(conn!=null)conn.close();
				} catch (SQLException e) {
					e.printStackTrace();
				}
		}
	}
	private void selectArticle() {
		System.out.println("****************");
		System.out.println("1. 이름 검색");// (1개 글자가 포함된 이름은 모두 검색)
		System.out.println("2. 전체 검색");
		System.out.println("3. 이전메뉴");
		System.out.println("****************");
		System.out.print("번호선택: ");
		int choice = scan.nextInt();
		if(choice==1) {
			System.out.print("검색할 이름 입력 : ");
			String name = scan.next();
		}else if(choice==2) {
			//전체출력
		}else if(choice==3) {
			return;
		}
//		1번 경우
//		검색할 이름 입력 : 이
//		이름=희동이	학번=2015
//		이름=이교수	과목=JAVA
		
	}
	private void deleteArticle() {
		//삭제를 원하는 이름 입력 : (정확하게 3개의 글자가 모두 입력된 상태)
		
	}
}
